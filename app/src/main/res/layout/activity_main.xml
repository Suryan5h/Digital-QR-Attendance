<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.labexercise4.suryanshbhardwaj.myapplication.MainActivity"
    android:background="@drawable/fathersday">

    <Button android:textAppearance="@android:style/TextAppearance.Large"
        android:id="@+id/b_leave"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:text="Departure"
        android:onClick="depart"
        android:backgroundTint="@android:color/holo_purple"
        android:layout_alignTop="@+id/b_arrival"
        android:layout_toRightOf="@+id/b_arrival"
        android:layout_toEndOf="@+id/b_arrival"
        />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:visibility="visible"
        android:background="@android:color/holo_blue_dark" />

    <Button android:textAppearance="@android:style/TextAppearance.Large"
        android:id="@+id/b_arrival"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:text="Arrival"
        android:onClick="abc"
        android:backgroundTint="@android:color/holo_green_light"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/email_all"
        android:layout_alignStart="@+id/email_all" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_arrival"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="WELCOME"
        android:gravity="center"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/email_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_arrival"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:textStyle="bold|italic" />

</RelativeLayout>
